
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Areas/admin/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/jquery-min.js"></script>
</head>
<body>
    <div class="container" style="margin-top:10%;">
        <a href="/admin/Yorumlar" class="btn btn-primary" style="margin-bottom:15px;">ANASAYFA</a>

        @using (Html.BeginForm("Yorumdetay", "Yorumlar", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            foreach (var item in Model)
            {

                <h1 style="text-align:center;display:block;font-weight:bold;margin-bottom:25px;">YORUM GÜNCELLEME</h1>

                <textarea type="text" class="form-control" name="Yorum"  style="margin-bottom:10px;"> @item.Yorum</textarea>

                <select class="form-control" name="Onay">
                    @if (item.Onay == true)
                    {
                        <option value="1">Aktif</option>
                        <option value="0">Pasif</option>
                    }
                    else
                    {
                        <option value="0">Pasif</option>
                        <option value="1">Aktif</option>
                    }

                </select>
               
                <button type="submit" class="btn btn-danger form-control" style="margin-top:15px;margin-bottom:35PX;"> Veriyi Güncelle</button>

                if (TempData["data"] != null)
                {
                    <div class="col-md-12" style="margin-top:35px;margin-bottom:35PX;">
                        @Html.Raw(TempData["data"])
                    </div>
                }
            }
        }


    </div>
</body>
</html>
