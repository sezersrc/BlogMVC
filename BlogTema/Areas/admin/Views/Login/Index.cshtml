
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:#044879">
    <div class="container" style="margin-top:10%;">
        <div class="row">

            <div class="col-md-4"></div>
            <div class="col-md-4" style="background-color:#ffffff;border:solid 0.3mm #f1f1f1;padding:35px;">

                @using (Html.BeginForm())
                {
                    <h1 style="text-align:center;display:block;font-weight:bold;margin-bottom:25px;">ADMİN PANEL</h1>
                    <input type="text" class="form-control" name="KulAdi" placeholder="Kullanıcı Adı" style="margin-bottom:10px;" />

                    <input type="password" class="form-control" name="Sifre" placeholder="Kullanıcı Şifre" style="margin-bottom:10px;" />

                    <button type="submit" class="btn btn-danger form-control"> Giriş Yap</button>

                    if (TempData["Mesaj"] != null)
                    {
                        <div class="alert alert-danger" style="margin-top:35px;text-align:center">@TempData["Mesaj"]</div>
                    }
                }


            </div>
            <div class="col-md-4"></div>

        </div>
    </div>
</body>
</html>
